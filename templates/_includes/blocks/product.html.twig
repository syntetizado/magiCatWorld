<div class="container mt-5">


  <!--Section: Content-->
  <section class="mb-5">

    <!-- Section heading -->
    <h3 class="text-center font-weight-bold mb-5">Product Details</h3>

  	<div class="row">

      <!--Grid column-->
      <div class="col-md-12">
        <!--News card-->
        <div class="card">
          <div class="card-body">
            <div class="row h-100 d-flex align-items-center">
              <div class="col-lg-6">
                <p class="text-primary ml-3 mb-5">{{product.description}}
                </p>
                <ul class="fa-ul mb-5 text-muted font-weight-light">
                  <li class="mb-2"><span class="fa-li"><i class="fas fa-check green-text"></i></span>Built in GPS</li>
                  <li class="mb-2"><span class="fa-li"><i class="fas fa-check green-text"></i></span>Heart Rate Sensor</li>
                  <li class="mb-2"><span class="fa-li"><i class="fas fa-check green-text"></i></span>Water Resistant 50 Meters</li>
                  <li class="mb-2"><span class="fa-li"><i class="fas fa-check green-text"></i></span>Comprehensive Workout App</li>
                </ul>
                <div class="d-flex justify-content-between ml-3">
                  <button type="button" class="btn btn-primary mx-0">Purchase</button>
                  <div class="text-center">
                    <h4 class="mb-0 font-weight-bold">$399</h4>
                  	<small class="grey-text">+5€ gasto de envío</small>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                  <img class="img-fluid " src="{{asset('/assets/img/product/') ~ product.image}}">
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--Grid column-->

    </div>
  </section>
  <!--Section: Content-->


</div>







<div class="justify-content-center">

{% if height is defined %}
    {% if height != NULL %}
        <div class="card px-4 py-4 container" style="height:{{height}}px">
    {% else %}
        <div class="card px-4 py-4 container">
    {% endif %}
{% else %}
    <div class="card px-4 py-4 container">
{% endif %}

        <div class="row">
            <div class="col-6">
                <a href="/producto/{{product.slug}}"><img class="img-fluid" src="{{asset('/assets/img/product/') ~ product.image}}"></a>
            </div>
            <div class="col-6 text-left px-2 py-2">
                <div class="row text-terciary">
                    <h1><b>{{product.name}}</b> </h1>
                </div>
                <div class="row text-primary align-items-center my-3">
                        <h3 class="text-muted no-wrapping">Precio &nbsp;</h3>
                        <h3><b>{{product.price}}&nbsp;€</b></h3>
                </div>

            </div>
            <div class="row align-middle text-primary mx-2 text-justify mt-2">
                <div class="col-12">
                    <h3><b> Descripción</b></h3>
                </div>
                <div class="col-12">
                    <h4>
                        {% if trimmedDescription is defined %}
                            {% if trimmedDescription != NULL %}
                                {{trimmedDescription}}...
                            {% else %}
                                {{product.description}}
                            {% endif %}
                        {% else %}
                            {{product.description}}
                        {% endif %}
                    </h4>
                </div>
            </div>
        </div>
    </div>
</div>
