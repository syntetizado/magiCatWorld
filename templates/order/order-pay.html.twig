{% extends 'base.html.twig' %}

{% block title %}Pago{% endblock %}

{% block body %}

<div class="container card px-5 py-5 col-xl-6 col-lg-7 col-md-offset-8 col-sm-8">
    <div class="row">
        <div class="well col-xs-12 col-sm-12 col-md-12 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row justify-content-center">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>{{order.direction}}</strong>
                        <abbr title="teléfono">Tlf:</abbr> {{app.user.phone}}
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p>
                        <em>Fecha del recibo: {{ "now"|date("m/d/Y") }}</em>
                    </p>
                    <p>
                        <em>Recibo nº: {{random(0000000, 1000000) ~ random('ABCDEFG')}}</em>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1>Recivo</h1>
                </div>
                </span>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Ud.</th>
                            <th class="text-center">Precio Ud.</th>
                            <th class="text-center">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                        <tr>
                            <td class="col-md-9"><em>{{item.idproduct.name}}</em></h4></td>
                            <td class="col-md-1" style="text-align: center"> {{item.quantity}} </td>
                            <td class="col-md-1 text-center">{{1 * item.idproduct.price}}€</td>
                            <td class="col-md-1 text-center">{{item.quantity * item.idproduct.price}}€</td>
                        </tr>
                        {% endfor %}

                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right"><h4><strong>Total: </strong></h4></td>
                            <td class="text-center text-danger"><h4><strong>{{order.totalprice}}€</strong></h4></td>
                        </tr>
                    </tbody>
                </table>
                <a href="{{path('cesta-pagado',{'id':order.id})}}" class="btn-block text-decoration-none">
                    <button type="button" class="btn btn-primary btn-lg btn-block">
                        Pagar ahora   <span class="glyphicon glyphicon-chevron-right"></span>
                    </button>
                </a>

            </td>
            </div>
        </div>
    </div>

{% endblock %}
