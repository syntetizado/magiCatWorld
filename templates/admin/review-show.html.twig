{% extends 'admin.html.twig' %}

{% block title %}Opinión: {{review.title}}{% endblock %}

{% block body %}

<div class="container my-5 py-5 z-depth-1">


      <!--Section: Content-->
      <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text ">
          <h2 class="shadow-sm p-3 mb-5 bg-white rounded">Review sobre
              <a class="text-decoration-none text-primary" href="{{path('edit-product',{'id':review.idproduct.id})}}"><b>{{review.idproduct.name}}</b></a>
          </h2>
        <!--Grid row-->
        <div class="row">

          <!--Grid column-->
          <div class="col-md-6 mb-4 mb-md-0 shadow-sm p-3 mb-5 bg-white rounded mx-3">

            <h3 class="font-weight-bold">{{review.title}}</h3>

            <p class="text-muted">{{review.description}}</p>

                <h5 class="font-weight-bold">Puntuación: {{review.rating}}</h5>

          </div>
          <!--Grid column-->

          <!--Grid column-->
          <div class="col-md-5 mb-4 mb-md-0 shadow-sm p-3 mb-5 bg-white rounded mx-3">

            <!--Image-->
            <div class="view overlay z-depth-1-half">
              <img src="{{asset('assets/img/product/' ~ review.idproduct.image)}}" class="img-fluid">
            </div>

          </div>
          <!--Grid column-->

        </div>
        <!--Grid row-->


      </section>
      <!--Section: Content-->


    </div>

{% endblock %}
