{% extends 'admin.html.twig' %}

{% block title %}Crear producto{% endblock %}

{% form_theme form _self %}

{% block file_widget %}
        {% set type = type|default('file') %}
        <input type="file" name="form[image]" class="custom-file-input" id="customFile inputGroupFile01">
        <label class="custom-file-label" for="customFile">Subir imagen</label>
{% endblock %}

{% block body %}

<div class="container my-5 py-5 z-depth-1">

    <!--Section: Content-->
    <section class="px-md-5 mx-md-5 text-center text-lg-left dark-grey-text">

        <!--Grid row-->
        <div class="row d-flex justify-content-center">

          <!--Grid column-->
          <div class="col-lg-8 col-md-10 col-12">
            <p class="h4 mb-4">Crear producto</b> </p>
            {% if error is defined %}
            <p>{{icon|raw}} {{error}}</p>
            {% endif %}
            <!-- formulario -->
            {{ form_errors(form) }}
            {{form_start(form)}}

                <div class="form-row mb-4">
                    <!-- Nombre -->
                    <div class="col text-left">
                        <label>Nombre</label>
                        {{ form_widget(form.name, {'attr': {"class" : "form-control",'placeholder':'Nombre'}})}}
                    </div>
                    <!-- Nombre -->
                </div>
                <div class="form-row mb-4">
                    <!-- Precio -->
                    <div class="col text-left">
                        <label>Precio</label>
                        <span class="currency-custom">€</span>
                        {{ form_widget(form.price, {'attr': {"class" : "form-control tinymce",'placeholder':'0.00'}})}}
                    </div>
                    <!-- Precio -->

                    <!-- Stock -->
                    <div class="col text-left">
                        <label>Unidades</label>
                        {{ form_widget(form.warehousequantity, {'attr': {"class" : "form-control",'empty_data':0,'placeholder':'Unidades','id':'inputNumber'}})}}
                    </div>
                    <!-- Stock -->
                </div>

                <div class="form-row mb-4">
                  <!-- imagen -->
                    <div class="col text-left">
                        <label>Imagen</label>
                        <div class="custom-file">
                            {{ form_widget(form.image, {'attr': {"class" : "form-control"}})}}
                        </div>
                    </div>
                  <!-- imagen -->

                  <!-- categoría -->
                    <div class="col text-left">
                        <label>Categoría</label>
                        <div class="btn-group btn-group-toggle col" data-toggle="buttons">
                            {{ form_widget(form.category, {'attr': {"class" : "form-control"}})}}
                        </div>
                    </div>
                    <!-- categoría -->
                </div>
                <div class="form-row mb-4">
                    <!-- Descripción -->
                    <div class="col text-left">
                        <label>Descripción</label>
                        {{ form_widget(form.description, {'attr': {"class" : "form-control textarea-bigger",'placeholder':'Escribe aquí la descripción'}})}}
                    </div>
                    <!-- Descripción -->
                </div>

                <div class="form-row mb-4 justify-content-end">
                    <!-- Enviar -->
                    <div class="col-auto">
                        <button class="btn btn-info my-4 btn-block" type="submit">enviar</button>
                    </div>
                    <!-- Enviar -->
                </div>

            {{form_end(form)}}
            <!-- formulario -->

          </div>
          <!--Grid column-->

        </div>
        <!--Grid row-->


    </section>
    <!--Section: Content-->

</div>

{% endblock %}
