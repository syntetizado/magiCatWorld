{% extends 'admin.html.twig' %}

{% block title %}mensaje{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <div class="col-auto my-auto">
            <h2>Mensaje de <b>{{message.iduser.nick}}</b> </h2>
        </div>
        <div class="ml-4 col-3">
            <div class="view">
                <img style="height:120px;" class="image-fluid" src="{{asset('/assets/img/user/' ~ message.iduser.image)}}">
            </div>
        </div>
    </div>
</div>

<div class="container my-5 py-5 z-depth-1">


        <!--Section: Content-->
        <section class="px-md-5 mx-md-5 dark-grey-text text-center text-lg-left">

          <!--Grid row-->
          <div class="row">

            <!--Grid column-->
            <div class="col-lg-7 mb-4 mb-lg-0">

              <h3 class="font-weight-bold">Tema: {{message.topic}}</h3>

              <p class="text-muted">{{message.description}}</p>

              <a class="btn btn-primary btn-md ml-0" href="{{path('delete-message',{'id':message.id})}}" role="button">BORRAR<i class="fa fa-trash ml-2"></i></a>

            </div>
            <!--Grid column-->

            <!--Grid column-->
            <div class="col-lg-5 mb-4 mb-lg-0 d-flex align-items-center justify-content-center">

                <i class="fas fa-envelope fa-10x"></i>

            </div>
            <!--Grid column-->

          </div>
          <!--Grid row-->


        </section>
        <!--Section: Content-->


      </div>


{% endblock %}
